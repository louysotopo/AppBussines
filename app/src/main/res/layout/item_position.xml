<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/item_position_layout"
    >
    <LinearLayout
        android:id="@+id/liner_item_personal"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_margin="5dp"
            android:layout_marginStart="20dp"
            android:layout_weight="0"
            android:orientation="vertical">

            <TextView
                android:id="@+id/text_item_position_nombre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="fill_horizontal"
                android:fontFamily="@font/roboto"
                android:text="Juan Perez solorsano"
                android:textColor="#000000"
                android:textSize="16sp"
                app:autoSizeMaxTextSize="30sp"
                app:autoSizeMinTextSize="8sp"
                app:autoSizeStepGranularity="1sp"
                app:autoSizeTextType="uniform" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/text_item_position_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="14dp"
                android:layout_toStartOf="@+id/text_item_position_state"
                android:fontFamily="@font/roboto"
                android:gravity="fill_horizontal"
                android:text="933336308"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/text_item_position_state"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginStart="10dp"
                android:layout_marginTop="14dp"
                android:layout_marginEnd="12dp"
                android:layout_marginBottom="14dp"
                android:fontFamily="@font/roboto"
                android:gravity="center_horizontal"
                android:text="activo"
                android:textColor="#000000"
                android:textSize="14sp" />

        </RelativeLayout>


    </LinearLayout>

</androidx.appcompat.widget.LinearLayoutCompat>